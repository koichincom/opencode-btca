{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "bun"
        ],
        "strict": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "esModuleInterop": true,
        "isolatedModules": true
    },
    "include": [
        "**/*.ts"
    ]
}
